<% layout("/layouts/boilerplate.ejs") %>
<h1><%= campground.title%></h1>
<img src="<%= campground.image%>" width="200" height="300" />
<h3 class="my-2">$<%= campground.price%> per night</h3>
<p class="my-2"><%= campground.description %></p>
