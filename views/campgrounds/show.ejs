<% layout("/layouts/boilerplate.ejs") %>
<div class="row my-auto">
  <div class="offset-3 col-3 mt-3">
    <div class="card">
      <img
        src="<%= campground.image%>"
        class="my-2 card-img-top img-fluid mx-auto d-block"
        style="height: 200px; width: 200px; object-fit: cover"
        alt="..."
      />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title%></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">
          Posted by <%= campground.author.username%>
        </li>
        <li class="list-group-item"><%= campground.location%></li>
        <li class="list-group-item">$<%= campground.price%>/night</li>
      </ul>
      <% if (currentUser &&campground.author.equals(currentUser._id)){%>
      <div class="card-body">
        <a
          class="text-black text-decoration-none"
          href="/campgrounds/<%= campground.id%>/edit"
        >
          <button class="card-link btn btn-warning">Edit</button>
        </a>
        <form
          class="d-inline"
          action="/campgrounds/<%=campground.id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% }%>
    </div>
  </div>
  <div class="col-3">
    <div class="container my-3">
      <h4>Please leave a review</h4>
      <form
        action="/campgrounds/<%= campground.id%>/reviews"
        class="needs-validation"
        novalidate
        method="POST"
      >
        <div>
          <label for="title" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="review[title]"
            required
          />
          <div class="valid-feedback">Looks good!</div>
        </div>

        <div>
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            class="form-range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            required
          />
        </div>
        <div class="mb-3">
          <label for="review" class="form-label">Review</label>
          <textarea
            class="form-control"
            name="review[body]"
            id="review"
            rows="3"
            required
          ></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success">Submit</button>
      </form>
    </div>
    <div class="container mb-3">
      <%for(let review of campground.reviews){%>
      <div class="card mb-3">
        <div class="card-header"><%= review.title%></div>
        <div class="card-body">
          <p>Rating: <%= review.rating %></p>
          <p><%= review.body %></p>
          <form
            action="/campgrounds/<%= campground.id%>/reviews/<%= review.id%>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-sm btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }%>
    </div>
  </div>
</div>
